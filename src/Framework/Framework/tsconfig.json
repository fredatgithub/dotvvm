{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strict": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "target": "ES2020",
    "declaration": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "lib": [ "dom", "ES2020" ],
    "module": "ES2015"
  },
  "exclude": ["obj/**", "Resources/Scripts/tests", "node_modules/**"],
  "compileOnSave": false
}
